{
  "compilerOptions": {
    // Basic Options
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,

    // TODO remove lib once BigInt is polyfilled
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],

    // Directories
    "outDir": "build",

    // Strict Type-Checking Options
    "strict": true,
    "noImplicitAny": false,

    // Additional Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // Module Resolution Options
    "moduleResolution": "node",

    // Advanced Options
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}
